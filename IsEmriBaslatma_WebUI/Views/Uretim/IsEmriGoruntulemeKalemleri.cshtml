@{
    Layout = null;
}
@using IsEmriBaslatma_DataAccesLayer.Model
@using IsEmriBaslatma_WebUI.ModelView
@model List<IS_EMRI_KALEMLERI>
<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.11.5/css/jquery.dataTables.css">
<link rel="stylesheet" type="text/css" href="path/to/your/styles.css">
<style>
    .bold-row {
        font-weight: bold;
    }

    .card {
        margin-bottom: 20px;
        border: 1px solid #e0e0e0;
        border-radius: 10px;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
    }

    .card-header {
        background-color: #f8f9fa;
        border-bottom: 1px solid #e0e0e0;
        padding: 15px;
        border-top-left-radius: 10px;
        border-top-right-radius: 10px;
    }

        .card-header h4 {
            margin: 0;
        }

    .table {
        border-collapse: collapse;
    }

        .table th, .table td {
            border: 1px solid #ddd;
            padding: 8px;
            text-align: center;
        }

        .table thead th {
            background-color: #007bff;
            color: white;
        }

        .table tfoot td {
            text-align: center;
        }

    .table-responsive {
        margin-top: 15px;
    }

    .btn-xl {
        padding: 10px 20px;
        font-size: 16px;
    }

    .btn-danger {
        background-color: #dc3545;
        border-color: #dc3545;
    }

    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
    }

    .text-right {
        text-align: right;
    }
</style>
<div class="card mb-10">
    <div class="card mb-4">
        <div class="card-header d-lg-flex">
            <h4 class="mb-0">İş Emri Kalemleri</h4>
        </div>
    </div>
    <div class="tab-content p-4" id="pills-tabContent-striped-rows">
        <div class="tab-pane tab-example-design fade show active" id="pills-striped-rows-design" role="tabpanel" aria-labelledby="pills-striped-rows-design-tab">
            <div class="table-responsive">
                <form action="/Home/MiktarSapma" method="post">
                    <table class="table table-bordered" id="dataTable">
                        <thead>
                            <tr>
                                <th>IS_EMRI_NO</th>
                                <th>KAYNAK</th>
                                <th>STOK KODU</th>
                                <th>STOK İSMİ</th>
                                <th>MAL GRUBU</th>
                                <th>OB</th>
                                <th>MİKTAR</th>
                                <th>URUN_BASI_MIKTAR</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (IS_EMRI_KALEMLERI item in Model)
                            {
                                string rowClass = item.BOLD == "X" ? "bold-row" : "";

                                <tr class="@rowClass">
                                    <td>@item.IS_EMRI_NO.TrimStart(new Char[] { '0' })</td>
                                    <td>@item.KAYNAK</td>
                                    <td>@item.STOK_KODU.TrimStart(new Char[] { '0' })</td>
                                    <td>@item.STOK_ISMI</td>
                                    <td>@item.MAL_GRUBU</td>
                                    <td>@item.OLCU_BIRIMI</td>
                                    <td>@item.MIKTAR</td>
                                    <td>@item.URUN_BASINA_MIKTAR</td>
                                </tr>
                            }
                        </tbody>
                        <tfoot>
                            <tr>
                                <td colspan="8" class="text-right">
                                    <a href="/home/IsEmriBaslatma" class="btn btn-danger btn-xl" style="white-space: nowrap;">Ana Sayfa</a>
                                </td>
                            </tr>
                        </tfoot>
                    </table>
                </form>
            </div>
        </div>
    </div>
</div>
<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
<script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
<script>
    $(document).ready(function () {
        $('#dataTable').DataTable({
            "paging": false, // Sayfalama kapalı
            "searching": true,
            "ordering": true,
            "info": false // Bilgi satırı kapalı
        });
    });
</script>
