@{
    Layout = null;
 }
@using IsEmriBaslatma_DataAccesLayer.Model;
@model  IEnumerable<IsEmirleriKalemleri>
<div class="card mb-10">
    <div class="card mb-4">
        <!-- Card Header -->
        <div class="card-header d-lg-flex">
            <h4 class="mb-0">Actions</h4>
        </div>
    </div>
    <!-- Tab content -->
    <div class="tab-content p-4" id="pills-tabContent-striped-rows">
        <div class="tab-pane tab-example-design fade show
          active" id="pills-striped-rows-design" role="tabpanel" aria-labelledby="pills-striped-rows-design-tab">
            <div class="table-responsive">
                <form action="/Home/MiktarSapma" method="post">
                    <table class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                @*<th scope="col">SAPMA</th>*@
                                <th scope="col">E.M KODU</th>
                                <th scope="col">STOK KODU</th>
                                <th scope="col">STOK İSMİ</th>
                                <th scope="col">MAL GRUBU</th>
                                <th scope="col">BİRİM</th>
                                <th scope="col">MİKTAR</th>
                                @*<th scope="col">#</th>
                                <th scope="col">#</th>
                                <th scope="col">#</th>*@
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (IsEmirleriKalemleri item in Model)
                            {
                                <tr>
                                   
                                    <td><input type="hidden" value="@item.id" name="isKalemleriID" /> @item.EMKODU</td>
                                    <td>@item.StokKodu</td>
                                    <td> @item.StokAdi</td>
                                    <td> @item.MalGrubu</td>
                                    <td> @item.OlcuBirimi</td>
                                    <td> @item.UretimBasinaMiktar</td>
                                </tr>
                            }
                        </tbody>
                        
                    </table>
                </form>
            </div>
        </div>

    </div>
</div>